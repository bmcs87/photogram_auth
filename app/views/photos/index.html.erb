<div class="page-header">
  <h1>
    <a href="/photos/new" class="btn btn-lg btn-success">
      <i class="fa fa-plus" aria-hidden="true"></i>
      New Photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Comment</th>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr class="panel">
        <% photo.comments.each do |comment| %>
          <td><%= comment.body %></td>
          <td><%= comment.user.username %></td>
        <% end %>  
        <td><%= photo.caption %></td>
        <td><img src="<%= photo.image %>" class="img-responsive"></td>
        <td><%= photo.user.username %></td>
        <td><%= time_ago_in_words(photo.created_at) %> ago </td>
        <td>
          <% if current_user.liked_photos.include?(photo) %>
          <i class="fa fa-heart" aria-hidden="true"></i>
          <% else %>
          <i class="fa fa-heart-o" aria-hidden="true"></i>
          <% end %>
          
          <% if current_user==photo.user %>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
          
        </td>
      </tr>
      <tr>
        <td>  
          <div class="form-group">
          <label for="image_url" class="col-sm-2 control-label">
            Comment
          </label>
          <div class="col-sm-10">
            <input type="text" id="comment" name="comment" placeholder="Add a comment..." class="form-control">
          </div>
        </div></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
